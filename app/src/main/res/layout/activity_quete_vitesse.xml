<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.squirrelsaga.vue.Vue_Quete_Vitesse">

    <!-- Backgroud -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/Background_foret"
        android:src="@drawable/foret" />

    <LinearLayout
        android:id="@+id/out"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:id="@+id/text_info"
            android:gravity="center"
            android:text="@string/quete_vitesse"
            style="@style/information"
            android:singleLine="false"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:id="@+id/text_info_temps"
            android:gravity="center"
            android:text="Temps restant :"
            style="@style/informationGris"
            android:singleLine="false"/>

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Temps"
            android:gravity="center"
            style="@style/informationRouge"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.75"/>

        <ImageButton
            android:src="@drawable/bouton_carte"
            android:id="@+id/BtnCarte"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:onClick="afficherCarte" />

    </LinearLayout>

</RelativeLayout>
