<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <!-- Backgroud -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/Background_nid"
        android:src="@drawable/nid" />


    <!-- Bouton carte et infos -->
    <LinearLayout
        android:id="@+id/out"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="16" >
            <ImageButton
                android:src="@drawable/bouton_carte"
                android:id="@+id/BtnCarte"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                android:background="@null"
                android:scaleType="fitCenter"
                android:onClick="afficherCarte"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:id="@+id/text_a_ramasser2"
                android:text="Carte"
                style="@style/information"
                android:gravity="top|center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"/>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4" >
            <ImageButton
                android:src="@drawable/interrogation"
                android:id="@+id/BtnInterrogation"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:onClick="showPopup"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Message bienvenue et Ã©cureuil -->
    <LinearLayout
        android:id="@+id/out2"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="5"
            android:gravity="bottom">
            <TextView
                android:id="@+id/textBienvenue"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/information"
                android:text="Bienvenue dans le nid de truc !"
                android:singleLine="false"/>
            <ImageView
                android:id="@+id/Image_ecureuil"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="2.5"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Petites fleches -->
    <LinearLayout
        android:id="@+id/kikoo"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"/>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="2"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:layout_gravity="left"
                android:src="@drawable/arrowright"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:weightSum="6"
            android:gravity="bottom"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/noisette"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/nbNoisettes"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                style="@style/textPetitLogo"
                android:layout_weight="5"
                android:text="Noisettes"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>