<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.squirrelsaga.vue.Vue_Quete_Force">

    <!-- Backgroud -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/Background_foret"
        android:src="@drawable/foret" />

    <LinearLayout
        android:id="@+id/out"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:id="@+id/text_info"
            android:gravity="center"
            android:text="@string/quete_force"
            style="@style/information"
            android:singleLine="false"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:weightSum="3"
            android:gravity="center">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/img_a_ramasser1"
                android:gravity="center"
                android:src="@drawable/gland"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:id="@+id/text_a_ramasser1"
                android:text="4/5"
                style="@style/textStyleLogo"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Ramasser"
            android:layout_weight="0.6"
            android:id="@+id/BtnRamasser1"
            style="@style/btnStyleOrange"
            android:layout_gravity="center"
            android:onClick="ramasserObjet1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:weightSum="3"
            android:gravity="center">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/img_a_ramasser2"
                android:gravity="center"
                android:src="@drawable/branche"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:id="@+id/text_a_ramasser2"
                android:text="0/5"
                style="@style/textStyleLogo"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Ramasser"
            android:layout_weight="0.6"
            android:id="@+id/BtnRamasser2"
            style="@style/btnStyleOrange"
            android:layout_gravity="center"
            android:onClick="ramasserObjet2"/>

    </LinearLayout>
</RelativeLayout>


